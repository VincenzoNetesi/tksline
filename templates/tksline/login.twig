		<title>TKSLine - Vendita di faretti in gesso all'ingrosso</title>

		<!-- Google font -->
		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

        <link rel="stylesheet" href="{{ basepath }}/templates/tksline/css/nice-select.css">

		<!-- Bootstrap -->
		<link type="text/css" rel="stylesheet" href="{{ basepath }}/templates/tksline/css/bootstrap.min.css"/>

		<!-- Slick -->
		<link type="text/css" rel="stylesheet" href="{{ basepath }}/templates/tksline/css/slick.css"/>
		<link type="text/css" rel="stylesheet" href="{{ basepath }}/templates/tksline/css/slick-theme.css"/>

		<!-- nouislider -->
		<link type="text/css" rel="stylesheet" href="{{ basepath }}/templates/tksline/css/nouislider.min.css"/>

		<!-- Font Awesome Icon -->
		<link rel="stylesheet" href="{{ basepath }}/templates/tksline/css/font-awesome.min.css">

		<!-- Custom stlylesheet -->
		<link type="text/css" rel="stylesheet" href="{{ basepath }}/templates/tksline/css/style.css"/>

		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

    </head>
	<body>
	{% include "partials/header.twig" %}



		<!-- BREADCRUMB -->
		<div id="breadcrumb" style="margin-bottom:3rem"class="section container">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<h3 class="breadcrumb-header">Login</h3>
						<ul class="breadcrumb-tree">
							<li><a href="#">Home</a></li>
							<li class="active">Login</li>
						</ul>
					</div>

				</div>
		
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		<!-- /BREADCRUMB -->

	<div id="index" v-cloak>

		<!-- SECTION -->
		<div class="section ">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row d-flex justify-content-center">
					<div class="col-md-6">
							<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">I tuoi dati personali</h3>
							</div>
							 <form class="needs-validation-login" novalidate @submit="checkFormLogin($event)">
					<div class="form-group">
        <input @change="checkFormLogin" v-model="formLogin.email" name="email-login" autocomplete required
                pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" class="form-control" type="email" placeholder="Email">									</div>
									<div class="form-group">
  <input @change="checkFormLogin" v-model="formLogin.password" name="last-name" autocomplete required placeholder="Password"
                pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$" class="form-control mb-4" type="password">		
											</div>
											  <p class="mt-3 text-danger" v-if="errorsLogin.length">
                <b>Perfavore correggi i seguenti errori:</b>
            <ul class=" text-error text-danger">
                <li v-for="error in errorsLogin">{_ error _}</li>
            </ul>
            </p>
											
											 <button type="sumbit"  @click="submitLogin = true" type="submit" style="margin-top:1rem"  class="primary-btn order-submit mb-4">Login</button> </form>
															

							<div style="margin-top:2rem" class="form-group">
								<div class="input-checkbox">
									<input type="checkbox" id="create-account">
									<label for="create-account">
										<span></span>
										Password dimenticata?
									</label>
									<div class="caption">
										<p>Invieremo una passord temporanea alla tua email</p>
										<form>
										<input class="input" type="email" required name="password" placeholder="La tua Email">
										        <button type="submit" @click="submitRegister = true, firstSubmit = true"
                style="margin-top:1.5rem;max-width:fit-content;margin-left:auto;margin-right:auto;z-index:800000000000000;"
				class="primary-btn order-submit"> Invia Email</button> </form>

									</div>
								</div>
							</div>
						</div>
					
					</div>
					<div class="col-md-6" style="    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    min-height: 24rem;">
						<h3 style="z-index:800000000000000;"class="breadcrumb-header">Non hai ancora un'account?</h3>
				<a href="/signup" style="max-width:fit-content;margin-left:auto;margin-right:auto;z-index:800000000000000;"class="primary-btn order-submit">Registrati</a>

					</div>
					
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		</div>
		<!-- /SECTION -->

		<!-- NEWSLETTER -->
		<div id="newsletter" class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<div class="col-md-12">
						<div class="newsletter">
							<p>Iscriviti alla nostra <strong>NEWSLETTER</strong></p>
							<form>
								<input class="input" type="email" placeholder="La tua Email">
								<button class="newsletter-btn"><i class="fa fa-envelope"></i> Iscriviti</button>
							</form>
							<ul class="newsletter-follow">
								<li>
									<a href="#"><i class="fa fa-facebook"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-twitter"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-instagram"></i></a>
								</li>
								<li>
									<a href="#"><i class="fa fa-pinterest"></i></a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<!-- /row -->
			</div>
			<!-- /container -->
		</div>
		</div>
		<!-- /NEWSLETTER -->

	{% include "partials/footer.twig" %}


		<!-- jQuery Plugins -->
		<script src="https://unpkg.com/vue-lazyload@1.3.3/vue-lazyload.js">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js">
        </script>


		<script src="{{ basepath }}/templates/tksline/js/jquery.min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/bootstrap.min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/slick.min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/nouislider.min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/jquery.zoom.min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/jquery-nice-select-min.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/vue/top_header.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/vue/login.js"></script>
		<script src="{{ basepath }}/templates/tksline/js/main.js"></script>

	</body>
</html>
