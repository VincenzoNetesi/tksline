<div id="register" v-cloak>
		<!-- SECTION -->
		<div class="section ">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row d-flex justify-content-center">
					<div class="col-md-6">
							<!-- Billing Details -->
						<div class="billing-details">
							<div class="section-title">
								<h3 class="title">Registrati</h3>
							</div>
			

        <form class="needs-validation-registrati" novalidate @submit="checkFormRegister($event)">

            
            <input v-if="!isCompagnia" @change="checkFormRegister" v-model="formRegister.nome" required autocomplete placeholder="Nome"
                name="nome-registrati-singolo" class="form-control" type="text">
				<br />
            
            <input v-if="!isCompagnia" @change="checkFormRegister" v-model="formRegister.cognome" placeholder="Cognome"
                name="cognome-registrati" required autocomplete class="form-control " type="text">

<br />
            
  
	        
            <input name="email-registrati" @change="checkFormRegister" autocomplete class="form-control" placeholder="Email"
                v-model="formRegister.email" required type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
            <br />
			          <input name="telefono-registrati" @change="checkFormRegister" autocomplete class="form-control" placeholder="Telefono"
                v-model="formRegister.telefono" required type="tel"
                pattern="^(\((00|\+)39\)|(00|\+)39)?(38[890]|34[4-90]|36[680]|33[13-90]|32[89]|35[01]|37[019])(\s?\d{3}\s?\d{3,4}|\d{6,7})$">
      <br />
            <input name="password-register" @change="checkFormRegister" required autocomplete class="form-control " placeholder="Password"
                v-model="formRegister.password" type="password"
                pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$">
            <br />
            <input name="indirizzo-registrati" @change="checkFormRegister" required autocomplete class="form-control" placeholder="Indirizzo"
                v-model="formRegister.indirizzo" type="text">

            <div class="row justify-content-between align-items-center">
<br />
                <label class="col-md-6 mt-1 text-secondary" for="citta-registrati">Citta
                    <select name="citta-registrati" @change="checkFormRegister" v-model="formRegister.citta" required
                        autocomplete class="form-control">
                        <option selected disabled value="">Scegli...</option>
                        <option>Arezzo</option>
                        <option>Atri</option>
                    </select>
					</label>

                <label class="col-md-6 mt-1 text-secondary" for="cap-registrati">Cap
                    <select v-model="formRegister.cap" @change="checkFormRegister" required name="cap-registrati"
                        autocomplete class="form-control">
                        <option selected disabled value="">Scegli...</option>
                        <option>11111</option>
                        <option>22222</option>
                    </select>
                </label>
            </div>
            <div class="form-check">
			<br />
                <label for="termini" class=" text-secondary mt-3">

                    <input @change="checkFormRegister" v-on:input="formRegister.termini = true"
                        :value="formRegister.termini" :checked="formRegister.termini === true" class="form-check-input"
                        required name="termini" type="checkbox" />
                    Accetto i termini e le
                    condizioni di uso
                </label>

                <div class="invalid-feedback text-error">
                    Assicurati di accettare i termini e le condizioni di utilizzo
                </div>
            </div>

            <p class="mt-3 text-danger" v-if="errorsRegister.length">
			     <br />
                <b>Perfavore correggi i seguenti errori:</b>
                <br />
                <br />
            <ul style="" class=" text-danger text-error">
                <li v-for="error in errorsRegister">{_ error _}</li>
            </ul>
            </p>
<br />
            <button type="submit" @click="submitRegister = true, firstSubmit = true"
                style="max-width:fit-content;margin-left:auto;margin-right:auto;z-index:800000000000000;"
				class="primary-btn order-submit"> Registrati</button>


        </form>
 
					
					</div>
					</div>
